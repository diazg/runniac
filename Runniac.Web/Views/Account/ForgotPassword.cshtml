@{
    ViewBag.Title = "ForgotPassword";
}

<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well bs-component" id="forgotPasswordContainer">
                @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post,
                    new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>Recuperación de contraseña</legend>
                        <div class="form-group">
                            <label for="UserName" class="col-lg-2 control-label">Email</label>
                            <div class="col-lg-9">
                                @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "Email" })
                            </div>
                        </div>
                        @if (TempData["Message"] != null)
                        {
                            <div class="form-group @TempData["Result"]">
                                <label id="passwordResetMessage" class="control-label col-lg-offset-2">
                                    @TempData["Message"]</label>
                            </div>                            
                        }
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-1">
                                <input type="submit" class="btn btn-primary pull-right" value="Enviar" />
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


