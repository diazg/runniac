@{
    ViewBag.Title = "ResetPassword";
}

<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well bs-component" id="forgotPasswordContainer">
                <fieldset>
                    <legend>Recuperación de contraseña</legend>
                    @if (TempData["Message"] != null)
                    {
                        <div class="form-group @TempData["Result"]">
                            <label id="passwordResetMessage" class="control-label col-lg-offset-2">
                                @TempData["Message"]</label>
                        </div>                            
                    }
                    <p>
                        @Html.ActionLink("Loguéate", "Login")
                    </p>
                </fieldset>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




