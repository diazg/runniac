<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well bs-component" id="forgotPasswordContainer">
                <fieldset>
                    <legend>Confirmación de tu cuenta</legend>
                    @if (TempData["Message"] != null)
                    {
                        <div class="form-group @TempData["Result"]">
                            <label class="control-label">
                                @TempData["Message"]
                            </label>
                        </div>
                    }
                    <p>
                        @Html.ActionLink("Loguéate", "Login")
                    </p>
                </fieldset>
            </div>
        </div>
    </div>
</div>



