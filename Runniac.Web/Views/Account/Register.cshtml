@model Runniac.Web.ViewModels.RegisterModel

<div id="registerForm" class="row">
    <div class="col-lg-12">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well bs-component">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>Regístrate en Runniac</legend>
                        <div class="form-group">
                            <label for="name" class="col-lg-2 control-label">Nombre</label>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", placeholder = "Nombre" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="name" class="col-lg-2 control-label">Apellidos</label>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.Lastname, null, new { @class = "form-control", placeholder = "Apellidos" })
                                @Html.ValidationMessageFor(m => m.Lastname)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-lg-2 control-label">Email</label>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-lg-2 control-label">Contraseña</label>
                            <div class="col-lg-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-lg-2 control-label">Confirma contraseña</label>
                            <div class="col-lg-9">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Vuelve a escribir la contraseña" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-2">
                                @Html.ValidationSummary(true)
                            </div>
                        </div>
                        @if (TempData["Message"] != null)
                        {
                            <div class="form-group @TempData["Result"]">
                                <label class="control-label col-lg-offset-2 col-lg-9">
                                    @TempData["Message"]
                                </label>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-1">
                                <input type="submit" class="btn btn-primary pull-right" value="Regístrate" />
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
