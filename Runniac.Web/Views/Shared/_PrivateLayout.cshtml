<!DOCTYPE html>
<html ng-app="runniac">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Runniac - Administración</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Runniac", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">Eventos <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#createEvent">Crear evento</a></li>
                            <li><a href="#importEvents">Importar eventos</a></li>
                            <li class="divider"></li>
                            <li><a href="#listEvents">Listar eventos</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">Usuarios <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#listUsers">Listar usuarios</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginButton")
            </div>

        </div>
    </div>

    <div id="private-layout-container" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Runniac</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", false)
</body>
</html>
